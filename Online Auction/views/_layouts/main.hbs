										<a class="btn btn-success m-1" href="/account/register" role="button">
											<i class="fa fa-user-plus" aria-hidden="true"></i>
											Sign up
										</a>
									</li>
									<li>
										<a class="btn btn-primary m-1" href="/account/signin" role="button">
											<i class="fa fa-sign-in" aria-hidden="true"></i>
											Sign in
										</a>
									</li>
									{{/if}}
								</ul>
							</div>
						</div>
					</div>
				</div>
