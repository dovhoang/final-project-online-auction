			<!-- Main Navigation -->
			<div class="main_nav_container">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 text-right">
							<div class="logo_container">
								<a href="/">Online<span>Auction</span></a>
							</div>
							<nav class="navbar">
								<ul class="navbar_menu">
									<li><a href="/">home</a></li>
									<li>
										<a class="dropdown-toggle" data-toggle="dropdown"
											style="cursor: pointer;">Categories<b></b></a>
										<ul class="dropdown-menu ">
											{{#each lcCatLevel1}}
											<li class="dropdown-submenu">
												<a href="/user/categories/{{CatID}}/products"
													class="dropdown-toggle">{{CatName}}</a>
												<ul class="dropdown-menu">
													{{#each ../lcCatAll}}
													{{#if_eq ParentID ../CatID}}
													<li><a href="/user/categories/{{CatID}}/products">{{CatName}}</a>
													</li>
													{{/if_eq}}
													{{/each}}
												</ul>
											</li>
											{{/each}}
										</ul>
									</li>
									<li><a href="#">your auction</a></li>
									<li>
										<form class="form-inline my-2 my-lg-0 mr-2">
											<input class="form-control mr-sm-2" type="search" placeholder="Search"
												aria-label="Search">
											<button class="btn btn-outline-success my-2 my-sm-0"
												type="submit">Search</button>
										</form>
									</li>
								</ul>
								<ul class="navbar_user">
									{{#if isAuthenticated}}
									{{!-- Phân hệ admin --}}
									{{#if_eq authUser.Type 2}}
									<div class="btn-group">
										<button type="button" class="btn btn-success dropdown-toggle"
											data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<i class="fa fa-cogs text-dark" aria-hidden="true"></i>
											{{authUser.Username}}
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item hover" href="/admin/user/manage"><i
													class="fa fa-users text-info" aria-hidden="true"></i> Manage
												users</a>
											<a class="dropdown-item hover" href="/admin/user/updowngrade">
												<i class="fa fa-arrow-circle-up text-success" aria-hidden="true"></i>
												Upgrade -
												<i class="fa fa-arrow-circle-down text-danger" aria-hidden="true"></i>
												Downgrade</a>
											<a class="dropdown-item hover" href="#">Something else here</a>
											<div class="dropdown-divider"></div>
											<a class="dropdown-item hover" href="#">Separated link</a>

											{{!-- Đăng xuất --}}
											<a class="dropdown-item hover"
												href="javascript: $('#frmSignOut').submit();">
												<i class="fa fa-sign-out text-danger" aria-hidden="true"></i>
												Sign out
											</a>
										</div>
									</div>

									{{/if_eq}}
									{{!-- Phân hệ bidder --}}
									{{#if_eq authUser.Type 0}}
									<div class="btn-group">
										<button type="button" class="btn btn-info dropdown-toggle"
											data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<i class="fa fa-user-circle-o text-dark" aria-hidden="true"></i>
											{{authUser.Username}}
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											{{!-- Profile --}}
											<a class="dropdown-item hover" href="/account/profile">
												<i class="fa fa-id-card text-info" aria-hidden="true"></i>
												Profile
											</a>
											{{!-- Sản phẩm mình đang tham gia đấu giá --}}
											<a class="dropdown-item hover" href="/account/auctionproduct">
												<i class="fa fa-gavel text-success" aria-hidden="true"></i>
												Bidding List
											</a>
											{{!-- Sản phẩm mình đã thắng --}}
											<a class="dropdown-item hover" href="/account/wonproduct">
												<i class="fa fa-trophy text-warning" aria-hidden="true"></i>
												Won List
											</a>
											{{!-- Đăng xuất --}}
											<a class="dropdown-item hover"
												href="javascript: $('#frmSignOut').submit();">
												<i class="fa fa-sign-out text-danger" aria-hidden="true"></i>
												Sign out
											</a>
											{{!-- Sản phẩm  yêu thích--}}
											<a class="dropdown-item hover" href="/account/favorite">
												<i class="fa fa-heart text-danger" aria-hidden="true"></i>
												Watch List
											</a>
										</div>
									</div>
									<li class="checkout ml-3 mr-3">
										<a href="/account/favorite">
											<i class="fa fa-heart text-danger" aria-hidden="true"></i>
											<span id="checkout_items" class="checkout_items">2</span>
										</a>
									</li>
									{{/if_eq}}
									{{!-- Phân hệ seller --}}
									{{#if_eq authUser.Type 1}}
									<div class="btn-group">
										<button type="button" class="btn btn-info dropdown-toggle"
											data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											<i class="fa fa-user-circle-o text-dark" aria-hidden="true"></i>
											{{authUser.Username}}
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											{{!-- Profile --}}
											<a class="dropdown-item hover" href="/account/profile">
												<i class="fa fa-id-card text-info" aria-hidden="true"></i>
												Profile
											</a>
											{{!-- Sản phẩm mình đang tham gia đấu giá --}}
											<a class="dropdown-item hover" href="/account/auctionproduct">
												<i class="fa fa-gavel text-success" aria-hidden="true"></i>
												Products you auction
											</a>
											{{!-- Sản phẩm mình đã thắng --}}
											<a class="dropdown-item hover" href="/account/wonproduct">
												<i class="fa fa-trophy text-warning" aria-hidden="true"></i>
												Products you won
											</a>
											<div class="dropdown-divider"></div>
											{{!-- Đăng sản phẩm đấu giá --}}
											<a class="dropdown-item hover" href="/account/postproduct">
												<i class="fa fa-plus-square-o text-danger" aria-hidden="true"></i>
												Post a auction product
											</a>
											{{!-- Sản phẩm mình đăng đấu giá --}}
											<a class="dropdown-item hover" href="/account/allpostproduct">
												<i class="fa fa-gavel text-dark" aria-hidden="true"></i>
												All ur post products
											</a>
											{{!-- Sản phẩm mình đăng đấu giá có người thắng --}}
											<a class="dropdown-item hover" href="/account/allfinishpostproduct">
												<i class="fa fa-trophy text-warning" aria-hidden="true"></i>
												All ur post product have a winner
											</a>
											{{!-- Đăng xuất --}}
											<a class="dropdown-item hover"
												href="javascript: $('#frmSignOut').submit();">
												<i class="fa fa-sign-out text-danger" aria-hidden="true"></i>
												Sign out
											</a>
										</div>
									</div>
									<li class="checkout ml-3 mr-3">
										<a href="/account/favoriteproduct">
											<i class="fa fa-heart text-danger" aria-hidden="true"></i>
											<span id="checkout_items" class="checkout_items">2</span>
										</a>
									</li>
									{{/if_eq}}
									{{/if}}
								</ul>
								<div class="hamburger_container">
									<i class="fa fa-bars" aria-hidden="true"></i>
								</div>
							</nav>
						</div>
					</div>
				</div>
