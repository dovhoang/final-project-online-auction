<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-3">
            <div class="card shadow" id="a">
                <h4 class="card-header text-danger">
                    <i class="fa fa-eye"></i>
                    Views
                </h4>
                <div class="list-group list-group-flush">
                    <a href="/admin/user/updowngrade" class="list-group-item list-group-item-action indam hover">
                        <i class="fa fa-arrow-circle-up"></i>
                        Upgrade -
                        <i class="fa fa-arrow-circle-down"></i>
                        Downgrade
                        {{#if countAll}}
                        <span class="badge badge-danger float-right">{{countAll}}</span>
                        {{/if}}
                    </a>

                    <a href="/admin/user/upgrade" class="list-group-item list-group-item-action indam hover">
                        <i class="fa fa-arrow-circle-up"></i>
                        Upgrade
                        {{#if countAllBidder}}
                        <span class="badge badge-danger float-right">{{countAllBidder}}</span>
                        {{/if}}
                    </a>

                    <a href="/admin/user/downgrade" class="list-group-item list-group-item-action indam active hover">
                        <i class="fa fa-arrow-circle-down"></i>
                        Downgrade
                        {{#if countAllSeller}}
                        <span class="badge badge-danger float-right">{{countAllSeller}}</span>
                        {{/if}}
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card shadow mb-4" id="register">
                <h3 class="card-header text-danger">
                    <i class="fa fa-users"></i> Users
                </h3>
                <div class="card-body">
                    {{#if success_msg}}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>{{success_msg}}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/if}}
                    <div class="row profile_line1">
                        <div class="col-lg-2 indam text-danger">
                            <i class="fa fa-sort-numeric-down chulon"></i>
                            #
                        </div>
                        <div class="col-lg-4 indam text-danger chulon">
                            <i class="fa fa-user"></i>
                            Username
                        </div>
                        <div class="col-lg-3 indam text-danger chulon">
                            <i class="fa fa-star"></i>
                            Rating
                        </div>
                    </div>
                    {{#each users}}
                    <div class="row profile_line">
                        <div class="col-lg-2 mt-1 mb-1" style="font-size: 16px;">
                            {{UserID}}
                        </div>
                        <div class="col-lg-4 mt-1 mb-1 indam" style="font-size: 16px;">
                            {{Username}}
                        </div>
                        <div class="col-lg-3 mt-1 mb-1 text-warning" style="font-size: 16px;">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                        <div class="col-lg-3">
                            <button type="submit" class="btn btn-danger float-right mt-1 mb-1 indam" data-toggle="modal"
                                data-target='#exampleModalCenter2{{UserID}}'>
                                <i class="fa fa-arrow-circle-down" aria-hidden="true"></i>
                                Bidder
                            </button>
                        </div>
                    </div>


                    <!-- Modal Downgrade Bidder -->
                    <div class="modal fade" id="exampleModalCenter2{{UserID}}" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title text-danger" id="exampleModalCenterTitle">
                                        <i class="fa fa-arrow-circle-down"></i>
                                        Confirm Downgrade
                                    </h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body indam">
                                    Proceed downgrade {{Username}} to bidder?
                                </div>
                                <div class="modal-footer">
                                    <form method="POST" id="frmUpDownGrade">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                            <i class="fa fa-times" aria-hidden="true"></i>
                                            No
                                        </button>
                                        <button type="submit" class="btn btn-primary"
                                            formaction="/admin/user/updowngrade/{{UserID}}/down">
                                            <i class="fa fa-check" aria-hidden="true"></i>
                                            Yes
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                </div>
                <div class="card-footer text-muted">
                    Footer
                </div>
            </div>
        </div>
    </div>
</div>