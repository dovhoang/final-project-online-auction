<!-- Product Grid -->
{{#if this.empty}}
<div class="card-body">
  <p class="card-text">
    Không có dữ liệu.
  </p>
</div>
{{else}}
<div class="new_arrivals" style="margin-top:50px">
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <div class="section_title new_arrivals_title">
          <h4>Category</h4>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
          {{#each this.products}}
          <div class="product-item m-1">
            <div class="product discount product_filter ">
              <div class="product_image">
                <img class="rounded mx-auto d-block" src="/{{ProductID}}/main_thumbs.png" alt="{{ProductName}}"
                  title="{{ProductName}}">
              </div>
              {{#if PricePurchase}}
              <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                <span>Buy now: {{PricePurchase}} $</span></div>
              {{/if}}
              <div class="favorite favorite_left"></div>
              <div class="product_info">
                <h6 class="product_name"><a href="#">{{ProductName}}</a></h6>
                <div class="product_price price_custom">{{PriceStart}} $</div>
                <div class="d-flex flex-row time_custom justify-content-center">
                  <div class="product_expiration_date timer_num time_custom_number">{{TimeExp}}
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-between">
              <div class="ml-3"><i class="fa fa-trophy" aria-hidden="true"></i> : tcs123</div>
              <div><i class="fa fa-gavel mr-3" aria-hidden="true">: 30</i></div>
            </div>
          </div>
          {{/each}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <nav>
    <ul class="pagination" style="justify-content: center;">
      <li class="page-item {{#if_eq prev_value 0}} disabled {{/if_eq}}">
        <a class="page-link" href="?page={{prev_value}}">
          <i class="fa fa-backward" aria-hidden="true"></i>
        </a>
      </li>
      {{#each this.page_numbers}}
      {{#if isCurrentPage}}
      <li class="page-item active" aria-current="page">
        <a class="page-link" href="javascript:;">{{value}} <span class="sr-only">(current)</span></a>
      </li>
      {{else}}
      <li class="page-item">
        <a class="page-link" href="?page={{value}}">{{value}}</a>
      </li>
      {{/if}}
      {{/each}}
      <li class="page-item {{#if over_page}} disabled {{/if}}">
        <a class="page-link" href="?page={{next_value}}">
          <i class="fa fa-forward" aria-hidden="true"></i>
        </a>
      </li>
    </ul>
  </nav>
</div>
</div>
</div>
</div>
</div>
</div>
</div>