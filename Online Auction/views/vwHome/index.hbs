<!-- Slider -->
<div class="main_slider" style="background-image:url(images/banner_index.png);height:300px">
	<div class="container fill_height">
		<div class="row align-items-center fill_height">
			<div class="col">
				<div class="main_slider_content">
					<h6>We are ship to all of Ho Chi Minh City for 1$</h6>
					<h1>1$ ONLY!</h1>
					Applied until the end of December, 2019
				</div>
			</div>
		</div>
	</div>
</div>
<!-- The product is almost finished -->
<div class="new_arrivals">
	<div class="container">
		<div class="row">
			<div class="col text-center">
				<div class="section_title new_arrivals_title">
					<h4>The product is almost finished</h4>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
					{{#each this.top5ToEnd}}
					<div class="product-item m-1">
						<div class="product discount product_filter ">
							<div class="product_image">
								<img class="rounded mx-auto d-block" src="/{{ProductID}}/main_thumbs.png"
									alt="{{ProductName}}" title="{{ProductName}}">
							</div>
							{{#if PricePurchase}}
							<div
								class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
								<span>Buy now: {{PricePurchase}} $</span></div>
							{{/if}}
							<div class="favorite favorite_left"></div>
							<div class="product_info">
								<h6 class="product_name"><a href="/product/id={{ProductID}}">{{ProductName}}</a></h6>
								<div class="product_price price_custom">{{PriceStart}} $</div>
								<div class="d-flex flex-row time_custom justify-content-center">
									<div class="product_expiration_date timer_num time_custom_number"></div>
								</div>
								<div class="time_exp" style="visibility: hidden; font-size: 1px">{{TimeExp}}</div>
							</div>
						</div>
						<div class="d-flex justify-content-between">
							<div class="card_winner"><i class="fa fa-trophy" aria-hidden="true"></i>
								{{#if CurrentWinner}}
								&nbsp{{WinnerName}}
								{{/if}} </div>
							<div class="card_hammer"><i class="fa fa-gavel" aria-hidden="true"></i>{{NumBid}}</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>
