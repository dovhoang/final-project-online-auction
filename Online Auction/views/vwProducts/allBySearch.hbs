<div class="new_arrivals" style="margin-top:50px">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="section_title new_arrivals_title">
                    <h4>{{this.keyword}}</h4>
                </div>
            </div>
        </div>
        {{#if this.empty}}
        <div style="max-height:450px">
            <div id="notfound">
                <div class="notfound">
                    <div class="notfound-404">
                        <h1>Oops!</h1>
                        <h2>There aren't any products here ...</h2>
                    </div>
                    <a href="/">Go TO Homepage</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="d-flex ">
            <a class="btn btn-outline-primary m-2" href="?sortby=Numbid&order=desc">Popular</a>
            <a class="btn btn-outline-warning m-2 " href="?sortby=TimePost&order=desc">New</a>
            <div class="dropdown m-2">
                <button class="btn btn-outline-success dropdown-toggle" type="button" id="dropdownMenuButton"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sort by
                </button>
                <div class="dropdown-menu m-0">
                    <a class="dropdown-item" href="?sortby=PriceStart&order=asc">Price <i class="fa fa-level-up"
                            aria-hidden="true"></i> </a>
                    <a class="dropdown-item" href="?sortby=PriceStart&order=desc">Price <i class="fa fa-level-down"
                            aria-hidden="true"></i></a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="?sortby=TimeExp&order=asc">Expired time <i class="fa fa-level-up"
                            aria-hidden="true"></i> </a>
                    <a class="dropdown-item" href="?sortby=TimeExp&order=desc">Expired time <i class="fa fa-level-down"
                            aria-hidden="true"></i></a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
                    {{#each this.products}}
                    <div class="product-item m-1">
                        <div class="product discount product_filter ">
                            <div class="product_image">
                                <img class="rounded mx-auto d-block" src="/{{original/ProductID}}/1_main.png"
                                    alt="{{original/ProductName}}" title="{{original/ProductName}}">
                            </div>
                            {{#if PricePurchase}}
                            <div
                                class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                <span>Buy now: {{original/PricePurchase}} $</span></div>
                            {{/if}}
                            <div class="favorite favorite_left"></div>
                            <div class="product_info">
                                <h6 class="product_name"><a href="/product/id={{original/ProductID}}">{{original/ProductName}}</a></h6>
                                <div class="product_price price_custom">{{original/PriceStart}} $</div>
                                <div class="d-flex flex-row time_custom justify-content-center">
                                    <div class="product_expiration_date timer_num time_custom_number"></div>
                                </div>
                                <div class="time_exp" style="visibility: hidden; font-size: 1px">{{original/TimeExp}}</div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="card_winner"><i class="fa fa-trophy" aria-hidden="true"></i>
                                {{#if original/CurrentWinner}}
                                &nbsp{{original/WinnerName}}
                                {{/if}} </div>
                            <div class="card_hammer"><i class="fa fa-gavel" aria-hidden="true"></i>{{original/NumBid}}</div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mt-4">
    <nav>
        <ul class="pagination" style="justify-content: center;">
            <li class="page-item {{#if_eq prev_value 0}} disabled {{/if_eq}}">
                <a class="page-link" href="?keyword={{keyword}}&page={{prev_value}}&sortby={{sortby}}&order={{order}}">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                </a>
            </li>
            {{#each this.page_numbers}}
            {{#if isCurrentPage}}
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="javascript:;">{{value}} <span class="sr-only">(current)</span></a>
            </li>
            {{else}}
            <li class="page-item">
                <a class="page-link" href="?keyword=&page={{value}}&sortby={{sortby}}&order={{order}}">{{value}}</a>
            </li>
            {{/if}}
            {{/each}}
            <li class="page-item {{#if over_page}} disabled {{/if}}">
                <a class="page-link" href="?keyword=&page={{next_value}}&sortby={{sortby}}&order={{order}}">
                    <i class="fa fa-forward" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>
{{/if}}
</div>
</div>
</div>
</div>
</div>
</div>