<div id="wrapper">
    
    <div class="my_profile row mb-5">
        <div class="col text-center">
            <div class="section_title new_arrivals_title">
                <h4>BIDDER INFO</h4>
                {{#each this.bidderInfo}}
                 <a href="#btnLike">
                    <button class="btn btn-light">
                        <i class="fa fa-thumbs-up"></i>
                        <span>{{RatingUp}}</span>
                    </button>
                </a>
                <a href="#btnLike">
                    <button class="btn btn-light">
                        <i class="fa fa-thumbs-down"></i>
                        <span>{{RatingDown}}</span>
                    </button>
                </a>
                    {{/each}}
            </div>
        </div>
    </div>
    {{#each this.bidderInfo}}
    <div class="card mb-3" style="max-width: 500px;">
        <div class="row no-gutters">
            <div class="col-md-8">
                <div class="card-body">
                    <div class="d-flex flex-row"><span class="font-weight-bold">Name: </span>{{Name}}</div>
                    <div class="d-flex flex-row"><span class="font-weight-bold">Time Create:</span>{{TimeCreate}}</div>
                    <div class="d-flex flex-row"><span class="font-weight-bold">Won Product:</span>{{CountWonProduct}}</div>
                    <div class="d-flex flex-row"><span class="font-weight-bold">Email:</span>{{Email}}</div>
                    <div class="d-flex flex-row"><span class="font-weight-bold"> Phone Number:</span>********441</div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="row">
        <div class="col text-center">
            <div class="section_title new_arrivals_title">
                <h4>REVIEW</h4>

            </div>
        </div>
    </div>
    <div class="card mb-3" style="max-width: 1100px;">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="card-body">
                    {{#each this.review}}
                    <span class="row">
                        <div class="col-lg-1 btnRv">
                            {{#if Rate}}
                            <i class="fa fa-thumbs-up"></i></div>
                            {{else}}
                             <i class="fa fa-thumbs-down"></i></div>
                            {{/if}}
                        <div class="user_review_container d-flex flex-column
                            flex-sm-row col-lg-11">
                            <div class="review">
                                <div class="rev">{{Comment}}</div>
                                <div class="nameReviewer">Name: {{nameBidder}}</div>
                                <p class="reviewDate">Date: {{Time}}</p>
                            </div>
                        </div>
                    </span>
                    {{/each}}
                </div>
            </div>
        </div>
         {{#if isAllowed}}
             {{#each this.bidderInfo}}
             <div>
            <button id="btnLike" class="btn btn-light">
                <i class="fa fa-thumbs-up"></i>
                <span id="numLike">{{RatingUp}}</span>
            </button>
            <button id="btnDislike" class="btn btn-light">
                <i class="fa fa-thumbs-down"></i>
                <span id="numDislike">{{RatingDown}}</span>
            </button>
            </div>
            {{/each}}
        <form method="POST">
            <p class="formRv">
                <input type="text" id="content"
                    class="form-control"
                    value="" placeholder="..." name="Comment">
                    <input id="rate" type="hidden" value="-1" name="Rate">
                <button type="submit" type="button" class="btn btn-primary
                    btn-add-question">
                    <i class="fa fa-paper-plane" aria-hidden="true"></i>
                </button>
            </p>
        </form>
        {{/if}}
    </div>
</div>


